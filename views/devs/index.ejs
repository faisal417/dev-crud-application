

<div class="container my-5">
    <div class="row  justify-content-center">
        <div class="col-md-10">
            <a class="btn btn-sm btn-primary" href="/devs/create">Add New</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-header">
                    <h3>Developers Application</h3>
                </div>
                <table class="table table-striped myTable my-3 px-2">
                    <thead>
                        <tr>
                            <th>SL</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Location</th>
                            <th>Photo</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">

                        <% devs.reverse().forEach((dev, index) => { %>
                            <tr>
                                <td><%= index + 1 %> </td>
                                <td><%= dev.name %></td>
                                <td><%= dev.phone %></td>
                                <td><%= dev.email %></td>
                                <td><%= dev.location %></td>
                                <td>

                                    <% if (dev.photo == 'avatar.png') { %>
                                        <img src="/images/<%= dev.photo %>" alt="">
                                    <% } else { %>
                                        <img src="/images/devs/<%= dev.photo %>" alt="">
                                    <% } %>

                                </td>
                                <td>
                                    <a class="btn btn-info btn-sm" href="/devs/<%= dev.id %> "><i class="fas fa-eye"></i></a>
                                    <a class="btn btn-warning btn-sm" href="/devs/edit/<%= dev.id %>"><i class="fas fa-edit"></i></a>
                                    <a class="btn btn-danger btn-sm deleteBtn" href="/devs/delete/<%= dev.id %>"><i class="fas fa-trash"></i></a>
                                </td>
                            </tr>
                        <% }) %>
                        


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>