

<div class="container my-5">
    <div class="row  justify-content-center">
        <div class="col-md-10">
            <a class="btn btn-sm btn-primary" href="/devs/create">Add A New Devs</a>
            <a class="btn btn-sm btn-primary" href="/devs">Verified Devs</a>
            <a class="btn btn-sm btn-danger" href="/devs/unverified">Unverified Devs</a>
            <br>
            <br>           
        </div>

        <% devs.reverse().forEach((dev, index) => { %>
            <div class="col-md-3">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="userInfo">
                            <% if (dev.photo == 'avatar.png') { %>
                                <img src="/images/<%= dev.photo %>" alt="">
                            <% } else { %>
                                <img src="/images/devs/<%= dev.photo %>" alt="">
                            <% } %>
                            <h2><%= dev.name %></h2>
                            <p><%= dev.phone %></p>
                            <p><%= dev.email %></p>
                            <p><%= dev.location %></p>
                            <hr>
                            <div class="btn btn-info">View <i class="fas fa-eye"></i> </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>
</div>