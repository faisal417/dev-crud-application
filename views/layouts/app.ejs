<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Developer Application</title>
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.1/css/all.min.css">
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="/css/style.css">
    
</head>
<body>
    
    <%- body %> 

    <script src="//code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>

        // data table
        $('.myTable').DataTable();

        //image preview
        const devsImage = document.querySelector('#uploadedPhoto')
        const previewImgTag = document.querySelector('.previewImg')
        if (devsImage) {
            devsImage.onchange = (e) =>{
            const imageLink = URL.createObjectURL(e.target.files[0]);
            previewImgTag.setAttribute('src', imageLink)
        }
        }

        // delete data
        const deleteBtn = document.querySelectorAll('.deleteBtn')
        
        if ( deleteBtn ) {
            deleteBtn.forEach(item =>{
            item.onclick = (e) =>{
                const confirmation = confirm('Are you sure?')
                if (confirmation) {
                    return true;
                }else{
                    return false;
                }
            }
        })
        }

        

    </script>
</body>
</html>